<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<deployment>
    <cluster hostcount="1" sitesperhost="4"/>
    <snapshot frequency="2m" retain="3" />
    <!-- <security enabled="true" /> -->
    <features>
      <feature name="export" option="advanced" />
    </features>
    <threadpools>
      <pool name="foo" size="10" />
    </threadpools>
    <!-- <avro registry="http://localhost:8081" namespace="some.namespace" prefix="prefix_string" /> -->
    <kipling enabled="true">
      <!-- <topics threadpool="foo" > -->
      <topics>
        <defaults>
          <retention policy="size" limit="2 gb" />
        </defaults>
        <profile name="foo">
          <retention policy="time" limit="2 wk" />
        </profile>
        <profile name="bar">
          <retention policy="time" limit="2 mo" />
        </profile>
        <profile name="baz">
          <!-- using default time-based policy -->
          <retention limit="2 mo" />
        </profile>
      </topics>
    </kipling>
</deployment>
