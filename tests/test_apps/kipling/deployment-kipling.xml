<?xml version="1.0"?>
<deployment>
    <cluster hostcount="1" kfactor="0" sitesperhost="4"/>
    <snapshot frequency="2m" retain="3" />
    <commandlog synchronous="true" enabled="true" logsize="1024">
        <frequency time="200" transactions="2147483647"/>
    </commandlog>
    <httpd enabled="true">
        <jsonapi enabled="true" />
    </httpd>
   <threadpools>
      <pool name="foo" size="10"/>
   </threadpools>

   <topics enabled="true" threadpool="foo">
      <properties>
        <property name="port">9092</property>
        <property name="thread.count">15</property>
      </properties>
      <profiles>
        <profile name="foo">
          <retention policy="size" limit="70 gB" />
        </profile>
        <profile name="bar">
          <retention limit="2 mo"/>
        </profile>
        <profile name="baz">
          <retention policy="time" limit="2 wk"/>
        </profile>
      </profiles>
    </topics>
</deployment>
